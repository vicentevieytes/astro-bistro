<Layout title="Hacer Pedido">
    <main>
        <Cart />
        <h1>
            Hacer un pedido en <span class="text-gradient">{restauranteData.name}</span>
        </h1>
        <!--<form id="order-form" class="form-card">-->
        <form id="order-form"
              class="form-card"
              data-local-id={localId}
              data-restaurant-name={restauranteData.name}>

        <div class="form-group">
                <label for="dish">Selecciona tu plato:</label>
                <select id="dish" name="dish" required>
                    <option value="">--Selecciona--</option>
                    {
                        menuData.map((dish: itemMenu) => (
                            <option value={dish.id}>
                                {dish.name} - ${dish.price}
                            </option>
                        ))
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="quantity">Cantidad:</label>
                <input type="number" id="quantity" name="quantity" min="1" required />
            </div>
            <button type="submit" class="submit-button">Agregar al pedido</button>
        </form>

        {/* Resumen del pedido */}
        <section class="order-summary">
            <h2>Resumen del Pedido</h2>
            <ul id="summary-list"></ul>
            <h3>Total: $<span id="total-price">0.00</span></h3>
        </section>
        <ul role="list" class="link-card-grid">
            <Card href="../" title="Ir a la pÃ¡gina principal" body="Volver a VerLaCarta" />
        </ul>
    </main>
</Layout>

<script>

    document?.addEventListener('submit', (event) => { // TODO: Is this useful? Remove and check.
        event.preventDefault();
    });

    import { OrderStatus } from '../types/types';
    import { io } from "socket.io-client";

    const socket = io('http://localhost:5001');

    // // Load cart items on page load
    // window.addEventListener('load', () => {
    //     const cartItems = JSON.parse(localStorage.getItem('cartItems') || '[]');
    //     if (typeof window.updateCart === 'function') {
    //         window.updateCart(cartItems);
    //     }
    // });


    // Obtener elementos del DOM
    const orderForm = document.getElementById('order-form') as HTMLFormElement;

    document.addEventListener('DOMContentLoaded', () => {
        const summaryList = document.getElementById('summary-list');
        const totalPriceElement = document.getElementById('total-price');

        let totalPrice = 0; // Total inicial del pedido

        orderForm?.addEventListener('submit', (event) => {
            event.preventDefault(); // Prevenir el comportamiento por defecto del formulario

            const dishSelect = document.getElementById('dish') as HTMLSelectElement;
            const quantityInput = document.getElementById('quantity') as HTMLInputElement;

            const dishId = dishSelect.value;
            const quantity = parseInt(quantityInput.value);

            const selectedDish = dishSelect.options[dishSelect.selectedIndex];

            if (selectedDish) {
                const dishName = selectedDish.textContent?.split(' - ')[0] || ''; // Obtener el nombre del plato
                const dishPrice = parseFloat(selectedDish.textContent?.split(' - $')[1] || '0');
                const itemTotal = dishPrice * quantity;
                totalPrice += itemTotal;

                const localId = orderForm?.dataset.localId;
                const restaurantName = orderForm?.dataset.restaurantName;

                // TODO: This is hardcoded for now:
                const userId = 1;

                // Create new item
                // By default, new items should be in the 'pending' status
                const newItem = {
                    id: dishId,
                    userId: userId,
                    name: dishName,
                    price: dishPrice,
                    quantity: quantity,
                    restaurantId: localId,
                    restaurantName: restaurantName
                };

                socket.emit('addToCart', newItem);
            }

            orderForm.reset(); // Resetear el formulario
        });
    });
</script>

